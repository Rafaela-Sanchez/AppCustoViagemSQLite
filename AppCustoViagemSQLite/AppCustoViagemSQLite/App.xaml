<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppCustoViagemSQLite.App">
    
    <Application.Resources>
        <ResourceDictionary>
            
            <Style x:Key="Titulo" TargetType="Label">
                <Setter Property="FontSize" Value="Medium"/>
                <Setter Property="FontAttributes" Value="Bold"/>
                <Setter Property="TextColor" Value="#7d7463"/>
                <Setter Property="BackgroundColor" Value="#eae2d8"/>
                <Setter Property="HorizontalOptions" Value="CenterAndExpand"/>
            </Style>

            
                        
            <Style x:Key="Inserir" TargetType="Entry">
                <Setter Property="VerticalOptions" Value="End" />
                <Setter Property="HorizontalOptions" Value="FillAndExpand" />
            </Style>


            <Style x:Key="BotoesAcao" TargetType="Button">
                <Setter Property="BackgroundColor" Value="#eae5e9" />
                <Setter Property="BorderColor" Value="Gray" />
                <Setter Property="BorderWidth" Value="1" />
                <Setter Property="CornerRadius" Value="10" />
                <Setter Property="TextColor" Value="#2a120e" />
            </Style>


        </ResourceDictionary>

    </Application.Resources>
</Application>